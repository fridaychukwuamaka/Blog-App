<% include partials/header%>
<div class="blog-header" >
<h3 class="center" >Create A New Book</h3>
<br>
<form action="/book" method="POST" >
<div class="uk-margin">
<label for="" class="uk-form-label" > <strong class="strong" >Title</strong></label>
<input type="text"
  class="uk-form-controls uk-input" name="book[title]" id="" aria-describedby="helpId" >
</div>

<div class="uk-margin">
<label for="" class="uk-form-label" ><strong class="strong" >Author</strong></label>
<input type="text"
  class="uk-form-controls uk-input" name="book[maker]" id="" aria-describedby="helpId" >
</div>

<div class="uk-margin">
<label for="" class="uk-form-label" ><strong class="strong" >Cover</strong></label>
<input type="text"
  class="uk-form-controls uk-input" name="book[cover]" id="" aria-describedby="helpId" >
</div>

<div class="uk-margin">
<label for=""  class="uk-form-label"> <strong class="strong" >Book</strong></label>
<input type="text" class="uk-form-controls uk-input" name="book[book]" >
</div>
<button  class="uk-button uk-button-primary" style="width:100%;" >Submit</button>
</form>
</div>


<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item ">
      <img class="d-block w-100" src="/pictures/piza-3010062.jpg" alt="First slide">
    </div>
    <div class="carousel-item active">
      <img class="d-block w-100" src="/pictures/hero.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/pictures/strawberry-2960533.jpg" alt="Third slide">
    </div>
  </div>
</div>

<div class="shadow-none p-3 mb-5 bg-light rounded">No shadow</div>
<div class="shadow-sm p-3 mb-5 bg-white rounded">Small shadow</div>
<div class="shadow p-3 mb-5 bg-white rounded">Regular shadow</div>
<div class="shadow-lg p-3 mb-5 bg-white rounded">Larger shadow</div>

